<h1>Listing books</h1>

<table>
  <tr>
    <th>Copies</th>
    <th>Isbn</th>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Author</th>
    <th>Summary</th>
    <th>Publisher</th>
    <th>Edition</th>
    <th>Details</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.copies %></td>
    <td><%= book.isbn %></td>
    <td><%= book.title %></td>
    <td><%= book.subtitle %></td>
    <td><%= book.author %></td>
    <td><%= truncate book.summary, 50 %></td>
    <td><%= book.publisher %></td>
    <td><%= book.edition %></td>
    <td><%= book.details %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

